@model Produto

<form asp-action="EditarProduto" method="post">
    <fieldset>
        <legend>Cadastrar Produto</legend>
        <div class="form-group">
            <label>Id:</label>
            <input class="form-control" type="text" readonly="" asp-for="ProdutoId" />
            <input type="hidden" asp-for="ProdutoId" />
        </div>
        <div class="form-group">
            <label>Nome:</label>
            <input type="text" class="form-control" asp-for="Nome" />
        </div>
        <div class="form-group">
            <label>Descrição:</label>
            <input type="text" class="form-control" asp-for="Descricao" />
        </div>
        <div class="form-group">
            <label>Preço:</label>
            <input type="text" class="form-control" asp-for="Preco" />
        </div>
        <div class="form-group">
            <label>Quantidade:</label>
            <input type="text" class="form-control" asp-for="Quantidade" />
        </div>
        <input type="submit" class="btn btn-success" value="Salvar" />
    </fieldset>
</form>