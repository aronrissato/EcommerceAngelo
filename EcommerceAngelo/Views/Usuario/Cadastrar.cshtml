@model Usuario

<h2>Cadastrar usuário</h2>

<form method="post">
    <fieldset>
        <legend>Cadastrar Usuario</legend>

        <div asp-validation-summary="ModelOnly" class="text-capitalize"></div>

        <div class="form-group" id="Cep">
            <label asp-for="Endereco.Cep"></label>
            <input type="text" class="form-control" asp-for="Endereco.Cep" readonly />
            <span asp-validation-for="Endereco.Cep" class="text-capitalize"></span>
        </div>

        <input type="submit" class="btn btn-success" value="Buscar CEP" asp-action="BuscarCep" />

        <div class="form-group" id="Rua">
            <label asp-for="Endereco.Logradouro"></label>
            <input type="text" class="form-control" asp-for="Endereco.Logradouro" readonly />
            <span asp-validation-for="Endereco.Logradouro" class="text-capitalize"></span>
        </div>

        <div class="form-group" id="Bairro">
            <label asp-for="Endereco.Bairro"></label>
            <input type="text" class="form-control" asp-for="Endereco.Bairro" readonly />
            <span asp-validation-for="Endereco.Bairro" class="text-capitalize"></span>
        </div>

    </fieldset>
</form>

<form method="post">
    <fieldset>
        <legend>Dados pessoais</legend>



        <input type="submit" class="btn btn-success" value="Cadastrar" asp-action="Cadastrar" />
    </fieldset>
</form>

